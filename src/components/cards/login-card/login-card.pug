include ../../form-elements/text-field/text-field
include ../../form-elements/button/button

mixin login-card()
    form.card.login-card    
        h1.card__title Войти

        .login-card__inputs 
            +text-field({type: "email", placeholder: "Email"}).login-card__email-input
            +text-field({type: "password", placeholder: "Пароль"}).login-card__password-input
        
        +button({species: "wide", text: "Войти", type: "submit"}).login-card__login-button

        .login-card__registration 
            p.login-card__registration-text Нет аккаунта на Toxin?
            +button({species: "white", text: "Создать"})